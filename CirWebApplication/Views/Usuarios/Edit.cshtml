                @Html.ValidationMessageFor(model => model.Cidade_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Data_Cadastro, htmlAttributes: new { @class = "control-label col-md-2" })
